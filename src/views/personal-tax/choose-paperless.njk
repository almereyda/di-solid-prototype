{% extends "personal-tax/layout.njk" %}
{% set pageTitleName = "personalTax.pages.choose.title" | translate %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block content %}
  <h1 class="govuk-heading-xl">
    {{ pageTitleName }}
  </h1>
  <p class="govuk-body">{{ "personalTax.pages.choose.paragraph1" | translate }}</p>
  <p class="govuk-body">{{ "personalTax.pages.choose.paragraph2" | translate }}</p>
  <ul class="govuk-list govuk-list--bullet">
    <li>{{ "personalTax.pages.choose.listItem1" | translate }}</li>
    <li>{{ "personalTax.pages.choose.listItem2" | translate }}</li>
    <li>{{ "personalTax.pages.choose.listItem3" | translate }}</li>
  </ul>
  <p class="govuk-body">{{ "personalTax.pages.choose.paragraph3" | translate }}</p>
  <form action="/personal-tax/choose-paperless" method="post">
    {{ govukRadios({
      idPrefix: "choose-paperless",
      name: "choose-paperless",
      fieldset: {
        legend: {
          text: "personalTax.pages.choose.heading" | translate,
          isPageHeading: true,
          classes: "govuk-fieldset__legend--l"
        }
      },
      items: [
        {
          value: "online",
          text: "personalTax.pages.choose.option1" | translate
        },
        {
          value: "post",
          text: "personalTax.pages.choose.option2" | translate
        }
      ]
    })}}
    <p class="govuk-body">{{ "personalTax.pages.choose.paragraph4" | translate | safe }}</p>
    {{ govukButton({
      text: 'general.continue' | translate
    }) }}
  </form>
{% endblock %}
