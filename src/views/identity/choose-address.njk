{% extends "layouts/base.njk" %}
{% set pageTitleName = 'identity.chooseAddress.heading' | translate %}
{% set hrefBack = referer %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/select/macro.njk" import govukSelect %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ 'identity.chooseAddress.heading' | translate }}</h1>
  <form action="/identity/choose-address" method="post">
    {{ govukSummaryList({
      rows: [
        {
          key: {
            text: "Postcode"
          },
          value: {
            html: "SW1A 2AA"
          },
          actions: {
            items: [
              {
                href: "/identity/find-address",
                text: "general.change" | translate,
                visuallyHiddenText: "postcode"
              }
            ]
          }
        }
      ]
    })}}

    {# TODO items array should be a list of addresses generated by postcode lookup #}
    {{ govukSelect({
      id: "home-address",
      name: "home-address",
      label: {
        text: 'identity.chooseAddress.selectLabel' | translate
      },
      items: []
    })}}
    {# TODO what should the href be? #}
    <p class="govuk-body">
      <a href="#" class="govuk-link">{{ 'identity.chooseAddress.noAddressLink' | translate }}</a>
    </p>
    {{govukButton({
      text: 'identity.chooseAddress.buttonText' | translate
    })}}
  </form>

  <a href="/identity/enter-address" class="govuk-link">NEXT</a>
{% endblock %}
